<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AjaxIntro</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ajax Intro", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("All countries", "Countries", "World")</li>
                    <li>@Html.ActionLink("Canada", "Regions", "World", new { id = 1 }, null)</li>
                    <li>@Html.ActionLink("Germany", "Regions", "World", new { id = 2 }, null)</li>
                    <li>@Html.ActionLink("USA", "Regions", "World", new { id = 3 }, null)</li>
                    <li>@Html.ActionLink("Cascade dropdown", "UseInfo", "World")</li>
                    <li>@Html.ActionLink("ICT staff list", "V1", "ICTPeople")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BTI420 Faculty</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <!-- Core functionality for all views in the web app -->
    <script src="~/Scripts/App/core.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
